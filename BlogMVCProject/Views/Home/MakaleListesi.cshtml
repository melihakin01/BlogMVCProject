@model IEnumerable<BlogMVCProject.Models.Makale>
@{
    ViewBag.Title = "MakaleListesi";
}

<div class="container">
    <br />
    <div class="row">
        <div class="col-md-8">
            <!--MakaleListesi-->
            @if (Model.Count() == 0)
            {
                <div class="alert alert-warning alert-dismissible fade show" role="alert">
                    <strong>Uyarı!</strong> Bu kategoride makale yok.
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            @foreach (var item in Model)
            {
                <div class="card-group">
                    <div class="card">
                        <img class="card-img-top" src="/Content/images/@item.Resim" alt="Card image cap" height="300">
                        <div class="card-body">
                            <h5 class="card-title">@item.Baslik</h5>
                            @if (item.Aciklama.Length > 60)
                            {
                                <p class="card-text">@item.Aciklama.Substring(0,60) :(...)</p>
                            }
                            else
                            {
                                <p class="card-text">@item.Aciklama</p>
                            }
                            
                            <a href="/Home/Detay/@item.Id" class="btn btn-primary">Devamını Oku...</a>
                        </div>
                        <div class="card-footer">
                            <small class="text-muted"><i class="bi bi-clock" style="font-size:20px"></i> @item.YayinTarih.ToString("dd-MM-yyyy") - <i class="bi bi-eye" style="font-size:20px"></i> @item.Goruntulenme Görüntülenme - <i class="bi bi-chat-left" style="font-size:20px"></i> @item.yorum.Count Yorum</small>
                        </div>
                    </div>
                </div>
                <br />
            }


        </div>
        <div class="col-md-4">
            <!--KategoriListesi-->
            @Html.Action("KategoriListesi", "Kategori")
            <br />
            @Html.Action("EnCokOkunan", "Home")
        </div>

    </div>

</div>

